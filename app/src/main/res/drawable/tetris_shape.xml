<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke android:width="0.5pt" android:color="@color/color_black" />
            <corners android:radius="1pt" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5pt" android:color="@color/color_red" />
            <corners android:radius="1pt" />
        </shape>
    </item>
</selector>